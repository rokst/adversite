                    <div class="panel-heading">
                        <h3 class="panel-title">{{ ad.advert.Title }}</h3>
                    </div>
                    <div class="panel-body">
                        <h5>Category: {{ ad.name }}</h5><br>
                        Description:
                        <p>{{ ad.advert.Description }}</p>
                        <h5>Price: {{ ad.advert.Price }} â‚¬</h5><br>
                        Posted on {{ ad.advert.date|date('Y-m-d') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}